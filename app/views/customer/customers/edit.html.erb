<div>
  <h1>ユーザー情報の編集</h1>
  <div>
    <%= form_for @user do |f| %>
    <div>
      <h4>名前</h4>
      <table>
        <tr>
          <td>姓</td>
          <td><%= f.text_area :name_last %></td>
          <td>名</td>
          <td><%= f.text_area :name_first %></td>
          <td>セイ</td>
          <td><%= f.text_area :name_last_kana %></td>
          <td>メイ</td>
          <td><%= f.text_area :name_first_kana %></td>
        </tr>
      </table>
    </div>

    <div>
      <h4>郵便番号</h4>
    </div>

    <div>
      <h4>住所</h4>
    </div>

    <div>
      <h4>電話番号</h4>
      <%= f.text_area :phone_number %>
    </div>

    <div>
      <h4>メールアドレス</h4>
      <%= f.text_area :email %>
    </div>

    <div>
      <h4>パスワード</h4>
      <%= f.text_area :password %>
    </div>

    <% end %>
  </div>
</div>
