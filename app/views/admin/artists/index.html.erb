
	<h1>アーティスト一覧!!</h1>
	<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<p>検索</p>
<%= form_tag(admin_artists_path,:method => 'get') do %>
<div class="col-sm-11">
  <%= text_field_tag :search , '', class: 'col-sm-12'%>
</div>
  <%= submit_tag 'Go!!', :name => nil %>
<% end %>
 	<table class="table">
	<%@posts.each_with_index do |artist,i|%>
	<tbody>
	<tr>
	<td>No.<%=i+1%></td>
	<td><%= artist.name %></td>
	<td><div class="btn btn-default "><%= link_to "削除", admin_artist_path(artist.id),method: :delete %></div>
　<div class="btn btn-default "><%= link_to "編集", edit_admin_artist_path(artist.id) %></div></td>
　</tr>
	</tbody>
	<%end%>
 	</table>
<%= paginate @posts, class: "paginate" %>

<%unless @posts %>


	<table class="table">
	<%@artists.each_with_index do |artist,i|%>
<tbody>
	<tr>
	<td>No.<%=i+1%></td>
	<td><%= artist.name %></td>
	<td><div class="btn btn-default "><%= link_to "削除", admin_artist_path(artist.id),method: :delete %></div>
　<div class="btn btn-default float-right"><%= link_to "編集", edit_admin_artist_path(artist.id) %></div></td>
　</tr>
</tbody>
	<%end%>
</table>
<%= paginate @artists, class: "paginate" %>
<%end%>