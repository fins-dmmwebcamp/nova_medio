<!-- 受注詳細 -->


<div>
  <h1>受注詳細</h1>

  <div>
    <h4>ユーザー情報</h4>
    <p>名前           : <%= @order.customer.name_full %><p>
    <p>メールアドレス : <%= @order.customer.email %><p>
  </div>

  <div>
    <h4>配送ステータス</h4>
    <%= form_for(@order, url:admin_order_path(@order), method: :put) do |f| %>
      <%= f.select :shipping_status, Order.shipping_statuses.keys.to_a, {} %>
      <%= f.submit "変更する" %>
    <% end %>
  </div>

  <div>
    <h4>購入した商品</h4>
    <table>
      <tr>
        <th>
          <p>商品名</p>
        </th>
        <th>
          <p>単価</p>
        </th>
        <th>
          <p>数量<p>
        </th>
        <th>
          <p>小計</p>
        </th>
      </tr>
      <% @order.orders_details.each do |order| %>
      <tr>
        <td>
          <p><%= order.product.name %></p>
        </td>
        <td>
          <p><%= order.product.price %>円</p>
        </td>
        <td>
          <p><%= order.amount %>個</p>
        </td>
        <td>
          <p><%= order.price.to_i * order.amount.to_i %>円</p>
        </td>
      </tr>
      <% end %>
      <tr>
        <td>
          <p>配送料</p>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
          <p><%= @order.shipping_fee %>円</p>
        </td>
      </tr>
      <tr>
        <td>
          <p>合計</p>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
          <p><%= @price + @order.shipping_fee.to_i %>円</p>
        </td>
      </tr>
    </table>
  </div>

  <div>
    <h4>受け取り者氏名</h4>
    <p><%= @order.reciever %></p>
  </div>

  <div>
    <h4>配送先住所</h4>
    <p><%= @order.postal_code %></p>
    <p><%= @order.address %></p>
  </div>

  <div>
    <h4>お支払い方法</h4>
    <p><%= @order.payment %></p>
  </div>

</div>
