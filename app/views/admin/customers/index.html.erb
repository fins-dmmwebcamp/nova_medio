

	<h1>ユーザー一覧!!</h1>
<div style="width:100%">

			<div class="row ">
				<div class="input-group" style="text-align:center;float:left;">
					<%= form_tag(admin_customers_path,:method => 'get') do %>
	  					<%= text_field_tag :search,"" ,:size => "70x35", placeholder: "メールアドレスで検索",class:"float-left" %>
	  						<%= submit_tag 'Go!', :mail => nil , class:"button is-info col-xs-2 btn-outline-secondary float-left"%>
					<% end %>
				</div>
			</div>

			<div class="row" >
				<div class="table_outer col-19 md-15">
					<table class="table table-bordered" style="width:90%;padding:0 10px;">
						<% @customers.each do |customer| %>
							<tr>
								<td class="col-xs-1"><%= customer.id %></td>
								<td class="col-xs-4"><%=link_to customer.name_full, admin_customer_path(customer.id), :style => "color:#000000" %></td>
								<td class="col-xs-6"><%=customer.email%></td>
							</tr>
						<% end %>
					</table>
						<%= paginate @customers %>
				</div>
			</div>

		</div>

</div>

