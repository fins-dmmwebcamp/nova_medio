

	<h1>ユーザー一覧!!</h1>


			<div class="row">
				<div class="input-group" style="text-align:center">
					<%= form_tag(admin_customers_path,:method => 'get') do %>
	  					<%= text_field_tag :search,"", class:"col-xs-10", placeholder: "メールアドレスで検索" %>
	  						<%= submit_tag 'Search', :mail => nil , class:"button is-info col-xs-2"%>
					<% end %>
				</div>
			</div>

			<div class="row">
				<div class="table_outer">
					<table class="table table-bordered">
						<% @customers.each do |customer| %>
							<tr>
								<td><%= customer.id %></td>
								<td><%=link_to customer.name_full, admin_customer_path(customer.id), :style => "color:#000000" %></td>
								<td><%=customer.email%></td>
							</tr>
						<% end %>
					</table>
						<%= paginate @customers %>
				</div>
			</div>

		</div>



