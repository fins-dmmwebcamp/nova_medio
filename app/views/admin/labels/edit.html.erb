<div class="container">
	<h1>レーベル編集!!</h1>

<%= form_for([:admin,@label]) do |f|%>

 <% if @label.errors.any? %>
 <div id="error_explanation">
 <ul>
      <% @label.errors.full_messages.each do |message| %>
         <li><%= message %></li>
      <% end %>

 </ul>
 </div>
 <%end%>
<div class="field">
<label class="col-sm-12 " style="font-size:20px;margin-top: 40px;">レーベル名</label><br>
<div class="col-sm-12">
 <%= f.text_field :name ,:size => "100x35"%>
  </div>
 <%= f.submit "編集完了", class: "btn btn-success width btn-lg pull-right" %><br>
 </div>

<%end%>

</div>