
	<h1>レーベル一覧!!</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<p>検索</p>
<%= form_tag(admin_labels_path,:method => 'get') do %>
<div class="col-sm-11">
  <%= text_field_tag :search , '', class: 'col-sm-12'%>
</div>
  <%= submit_tag 'Go!!', :name => nil %>
<% end %>
 	<table class="table">
	<%@posts.each_with_index do |label,i|%>
	<tbody>
	<tr>
	<td>No.<%=i+1%></td>
	<td><%= label.name %></td>
	<td><div class="btn btn-default "><%= link_to "削除", admin_label_path(label.id),method: :delete %></div>
　<div class="btn btn-default"><%= link_to "編集", edit_admin_label_path(label.id) %></div></td>
　</tr>
	</tbody>
	<%end%>
 	</table>
<%= paginate @posts, class: "paginate" %>

<%unless @posts %>

	<table class="table">
	<%@labels.each_with_index do |label,i|%>
<tbody>
	<tr>
	<td>No.<%=i+1%></td>
	<td><%= label.name %></td>
	<td><div class="btn btn-default"><%= link_to "削除", admin_label_path(label.id),method: :delete %></div>
　<div class="btn btn-default pull-right"><%= link_to "編集", edit_admin_label_path(label.id) %></div></td>
　</tr>
</tbody>
	<%end%>
</table>
<%= paginate @labels, class: "paginate" %>

<%end%>