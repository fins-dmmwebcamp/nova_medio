<div>
	<h1>購入後レビュー</h1>
	<%= render partial: 'customers/shared/error_messages', locals: { resource: @review } %>
	<%= form_for @review, url: product_reviews_path do |f|  %>
		<div class="form-group" id="star">
			<p>5段階評価</p>
			<%= f.label :rank,'評価 ', class:'col-md-3 col-form-label' %>
			<%= f.hidden_field :rank, id: :review_star %>
		</div>
		<div class="form-group">
			<p>タイトル</p>
			<%= f.text_field :title, class: 'col-xs-12 form-control'%>
		</div>
		<div class="form-group">
			<p>レビュー内容</p>
			<%= f.text_area :body, class: 'col-xs-12 form-control', rows:"5" %>
		</div>
		<div class="float-right">
			<%= f.submit "投稿", class: "col-xs-3 btn btn-success" %>
		</div>
	<% end %>
</div>
<!-- 評価javascript -->
		<script>
			$('#star').raty({
				size: 36,
				starOff: '<%= asset_path('star-off.png') %>',
				starOn : '<%= asset_path('star-on.png') %>',
				scoreName: 'review[rank]',
				half: false,
			});
		</script>