	<h1>いいね一覧</h1>
	<div class="table-responsive">
	<table class="table text-nowrap w-100">
		<tbody>
			<% @products.each do |product| %>
			<tr>
				<td style="width:80px">
					<%= link_to( product_path(product)) do %>
						<%= attachment_image_tag product, :product_image, :fill, 80, 80, fallback:"no_image.jpg", size: "80x80" %>
					<% end %>
				</td>
				<td class="w-50 text-nowrap">
				<%= link_to product.name, product_path(product) %><br>
				<%= product.artist.name %>
				</td>
				<td>
					<p><%= product.price %>円</p>
				</td>
				<td style="width:104px">
					<%= link_to "カートに入れる", cart_items_path(cart_item:{amount: 1, product_id: product.id}), method: :post, class:"btn btn-sm btn-primary" %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>