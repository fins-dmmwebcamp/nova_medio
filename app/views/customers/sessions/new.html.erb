  <div class="container">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <h4>メールアドレス</h4>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",:class => "field" %>
      </div>

      <div class="field">
        <h4>パスワード</h4>
        <%= f.password_field :password, autocomplete: "current-password",:class => "field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :パスワードを保存する %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",:class => "btn btn-primary ",:style => "width:100px" %>
      </div>
    <% end %>

  </div>
