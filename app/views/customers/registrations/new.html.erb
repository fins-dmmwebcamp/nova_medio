

        <h2>サインアップ</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


            <div class ="field">
                <h4>名前</h4>
                <%= f.label :姓 %>
                <%= f.text_field :name_first, autofocus: true , placeholder: "山田",:class => "field" %>
                <%= f.label :名 %>
                <%= f.text_field :name_last, autofocus: true, placeholder: "太郎",:class => "field" %></br>

                <%=f.label :セイ%>
                <%= f.text_field :name_first_kana, autofocus: true , placeholder: "ヤマダ",:class => "field" %>
                <%=f.label :メイ%>
                <%= f.text_field :name_last_kana, autofocus: true , placeholder: "タロウ",:class => "field" %>

              </div>



                <div>
                  <%= f.fields_for :destination, @cutomer_destinations_build do |destination_form| %>
                        <div class="field">
                           <h4>郵便番号</h4>
                            <%= destination_form.text_field :postal_code, placeholder: "0000000",:class => "field"  %>
                        </div>




                        <div class="field">
                            <h4>住所</h4>
                            <%= destination_form.select :address_prefecture, Destination.address_prefecture.keys.to_a, include_blank:'都道府県' %>
                            <%= destination_form.text_field :address_city, autofocus: true , placeholder: "市区町村",:class => "field"  %></br>
                            <%= destination_form.text_field :address_after, autofocus: true , placeholder: "以降の住所",:class => "field"  %>


                <% end %>
              </div>

              <div class="field">
                  <h4>電話番号</h4>
                  <%= f.text_field :phone_number, autofocus: true , placeholder: "123456789",:class => "field" %>
              　</div>

              <div class="field">
                  <h4>メールアドレス</h4>
                  <%= f.text_field :email ,placeholder: "example@example.com",:class => "field"  %>
              </div>


                <div class="field">
                  <h4>パスワード</h4>
                  <%= f.password_field :password ,placeholder: "パスワード入力",:class => "field"  %></br>
                  <%= f.password_field :password_confirmation, placeholder: "パスワード確認",:class => "field"  %>
                </div>


              <div class="actions">
                <%= f.submit "Sign up",:class => "btn btn-primary ",:style => "width:100px" %>
              </div>
        <% end %>

