
    <div class="col-xs-12" style="margin:0 auto">

        <h2 style>ユーザー情報詳細</h2>

            <div class="btn col-xs-12 col-md-offset-0">
              <%= link_to "いいねした商品", favorites_path, style:"margin-right:10px", class:"fas fa-heart btn btn-primary" %>
              <%= link_to "レビュー一覧", customer_reviews_path(@customer), style:"margin-right:10px", class:"btn btn-primary" %>
              <%= link_to "情報を編集する", edit_customer_path(@customer), style:"margin-right:10px", class:"btn btn-primary" %>
            </div>

            <table style="margin:50px auto "class="table-striped">
                <tr>
                  <td>名前:</td>
                  <td><%= @customer.name_full %></td>
                </tr>

                <tr>
                  <td>フリガナ:</td>
                  <td><%= @customer.name_full_kana %></td>
                </tr>

                <tr>
                  <td>郵便番号：</td>
                  <td><%= @destination.postal_code %></td>
                </tr>
                <tr>
                  <td>住所：</td>
                  <td><%= @destination.address_full %></td>
                </tr>

                <tr>
                  <td>電話番号：</td>
                  <td><%= @customer.phone_number %></td>
                </tr>
                <tr>
                  <td>メールアドレス：</td>
                  <td><%= @customer.email %></td>
                </tr>
            </table>

            <div class="otodoke_saki">
              <h3>お届け先一覧</h3>
                <table class="table" >
                  <tbody>
                  <tr>
                    <td><%= link_to '編集', edit_destination_path(@destination), class:"btn btn-success" %></td>
                    <td><%= @destination.name %></td>
                    <td><%= @destination.address_full %></td>
                  </tr>


                  <% @destinations.each do |destination| %>
                  <% if destination.is_main = false %>
                  <tr>
                    <td><%= link_to '編集', edit_destination_path(destination), class:"btn btn-success" %></td>
                    <td><%= destination.name %></td>
                    <td><%= destination.address_full %></td>
                  </tr>
                  <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>

            <div style="margin-top:50px">
              <%= link_to "退会する", customer_leave_page_path(@customer), class:"btn btn-warning",style:"width:100%" %>
            </div>

    </div>


  